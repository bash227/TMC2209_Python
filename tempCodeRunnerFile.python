import serial

# Configure the serial port
ser = serial.Serial('COM3', baudrate=115200, timeout=1)  # Replace 'COM4' with your port

# Create the binary data (8 bytes)
# Example: 00000000 00011000 00000000 00000000 (24 in decimal for the second byte)
binary_message = bytes([0b00000000, 0b00011000, 0b00000000, 0b00000000, 
                        0b00000000, 0b00000000, 0b00000000, 0b00000000])

# Send the binary data
ser.write(binary_message)

# Close the serial port
ser.close()
